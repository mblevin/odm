<%= form_for(@user) do |f| %>
  <%= render :partial => 'shared/errors', :locals => {:object => @user} %>
  <div class="form-field">
    <%= f.label :first_name, "First Name:" %>
    <%= f.text_field :first_name %>
  </div>
  <div class="form-field optional">
    <%= f.label :last_name, "Last Name:" %>
    <%= f.text_field :last_name %>
  </div>
  <div class="form-field">
    <%= f.label :city, "Current City:" %>
    <%= f.text_field :city %>
  </div>
  <div class="form-field optional">
    <%= f.label :state, "Current State" %>
    <%= f.text_field :state %>
  </div>
  <div class="form-field optional">
    <%= f.label :bio, "Say a Few Words About Yourself" %>
    <%= f.text_area :bio %>
  </div>
    <%= f.submit "Go" %>
<% end %>